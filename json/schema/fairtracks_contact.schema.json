{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/v1/current/json/schema/fairtracks_contact.schema.json",
    "$comment": "JSON signature: daba8d50c607720756379d7846d10565cbc1b38101e8014311927710541ba83b",
    "title": "Contact",
    "type": "object",
    "properties": {
        "@schema": {
            "description": "The JSON Schema absolute URL. Used to link JSON data to a JSON schema. Must match the value of '$id' in the linked schema",
            "type": "string",
            "format": "uri",
            "pattern": "^(https?|ftp)://",
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/v1/current/json/schema/fairtracks_contact.schema.json"
        },
        "name": {
            "description": "Name of contact person/organization",
            "type": "string",
            "examples": [
                "ENCODE DCC"
            ]
        },
        "e-mail": {
            "description": "E-mail to contact person/organization",
            "type": "string",
            "format": "idn-email",
            "examples": [
                "encode-help@lists.stanford.edu"
            ]
        },
        "orcid": {
            "description": "ORCID to contact person",
            "type": "string",
            "format": "curie",
            "namespace": "orcid",
            "matchType": "canonical"
        }
    },
    "required": [
        "name"
    ],
    "anyOf": [
        {
            "required": [
                "e-mail"
            ]
        },
        {
            "required": [
                "orcid"
            ]
        }
    ],
    "additionalProperties": true
}
