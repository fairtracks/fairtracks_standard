{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_track.schema.json",
    "$comment": "OPML signature: fa08a77de5a59b5c2234e10318374683225ecefc2fc566236a66a3944a1c542c",
    "title": "FAIRification of Genomic Tracks JSON Schema - Track",
    "type": "object",
    "properties": {
        "@schema": {
            "description": "The JSON schema absolute URL. Used for link JSON data to a particular version of the JSON schema. Must match the value of '$id' in the linked schema",
            "type": "string",
            "format": "url",
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_track.schema.json"
        },
        "global_id": {
            "description": "Global track identifier, resolvable by identifiers.org [to be created by us]",
            "type": "string",
            "format": "curie",
            "namespace": "fairtracks",
            "matchType": "basic",
            "autogenerated": true
        },
        "local_id": {
            "description": "Submitter-local identifier (within investigation/hub) for study (in CURIE-format, if applicable)",
            "type": "string",
            "unique": true
        },
        "experiment_ref": {
            "description": "Reference to the experiment of the track (using the submitter-local identifier of the sample)",
            "type": "string"
        },
        "file_url": {
            "description": "A URL to the track data file",
            "type": "string",
            "format": "url"
        },
        "file_name": {
            "description": "Name of the track file",
            "type": "string",
            "autogenerated": true
        },
        "label_short": {
            "description": "A short label of the track file [less than 14 characters?]",
            "type": "string"
        },
        "label_long": {
            "description": "A long label of the track file",
            "type": "string"
        },
        "genome_assembly": {
            "description": "An assembly identifier (using UCSC nomenclature)",
            "type": "string"
        },
        "file_format": {
            "description": "File format of the track data file",
            "type": "object",
            "properties": {
                "term_url": {
                    "description": "File format (URL linking to an EDAM ontology term)",
                    "type": "string",
                    "format": "term",
                    "ontology": "http://edamontology.org/EDAM_1.21.owl",
                    "matchType": "exact"
                },
                "term_value": {
                    "description": "File format (exact value according to the EDAM ontology)",
                    "type": "string",
                    "autogenerated": true
                }
            },
            "required": [
                "term_url"
            ]
        },
        "content_type": {
            "description": "Type of content represented by the track data file (narrow peaks, signal, region, etc.)",
            "type": "object",
            "properties": {
                "term_url": {
                    "description": "Content type (URL linking to an EDAM ontology term)",
                    "type": "string",
                    "format": "term",
                    "ontology": "http://edamontology.org/EDAM_1.21.owl",
                    "matchType": "exact"
                },
                "term_value": {
                    "description": "Content type (exact value according to the EDAM ontology)",
                    "type": "string",
                    "autogenerated": true
                }
            }
        },
        "checksum": {
            "type": "object",
            "properties": {
                "cs_method": {
                    "description": "Method of checksum generation",
                    "type": "string",
                    "enum": [
                        "MD5",
                        "SHA-256"
                    ]
                },
                "cs_hash": {
                    "description": "Checksum of track file, using the method described in cs_method",
                    "type": "string"
                }
            },
            "required": [
                "cs_method",
                "cs_hash"
            ]
        }
    },
    "required": [
        "local_id",
        "experiment_ref",
        "file_url",
        "label_short",
        "label_long",
        "genome_assembly",
        "file_format",
        "content_type",
        "checksum"
    ],
    "additionalProperties": true
}