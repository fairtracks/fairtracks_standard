{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_sample.schema.json",
    "$comment": "OPML signature: 6a7bce69a91e14c1e4ceaf88a823fb1d41cfcac65d23e9ac6e3f3e68ab789eb9",
    "title": "FAIRification of Genomic Tracks JSON Schema - Sample",
    "type": "object",
    "properties": {
        "@schema": {
            "description": "The JSON schema absolute URL. Used for link JSON data to a particular version of the JSON schema. Must match the value of 'id' in the linked schema",
            "type": "string",
            "format": "url",
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_sample.schema.json"
        },
        "global_id": {
            "description": "Global sample identifier, resolvable by identifiers.org",
            "type": "string",
            "format": "curie",
            "namespace": "biosample",
            "matchType": "canonical"
        },
        "local_id": {
            "description": "Submitter-local identifier (within investigation/hub) for sample (in CURIE-format, if applicable)",
            "type": "string",
            "unique": true
        },
        "biomaterial_type": {
            "description": "Type of biomaterial",
            "type": "string",
            "pattern": "^(?i)cell line|primary cell|primary cell culture|primary tissue$"
        },
        "sample_type": {
            "description": "Main class of sample (specific cell line, cell type, etc.)",
            "type": "object",
            "properties": {
                "term_url": {
                    "description": "URL linking to an EFO ontology term",
                    "type": "string",
                    "format": "term",
                    "ontology": "https://github.com/EBISPOT/efo/releases/download/v3.5.1/efo.owl",
                    "matchType": "exact"
                },
                "term_value": {
                    "description": "Exact value according to the EFO ontology",
                    "type": "string",
                    "autogenerated": true
                }
            },
            "required": [
                "term_url"
            ]
        },
        "tissue_type": {
            "description": "Tissue type of sample",
            "type": "object",
            "properties": {
                "term_url": {
                    "description": "URL linking to an EFO ontology term",
                    "type": "string",
                    "format": "term",
                    "ontology": "https://github.com/EBISPOT/efo/releases/download/v3.5.1/efo.owl",
                    "matchType": "exact"
                },
                "term_value": {
                    "description": "Exact value according to the EFO ontology",
                    "type": "string",
                    "autogenerated": true
                }
            },
            "required": [
                "term_url"
            ]
        },
        "phenotype": {
            "description": "Main phenotype (e.g. disease) which is studied",
            "type": "object",
            "properties": {
                "term_url": {
                    "description": "URL linking to an EFO ontology term",
                    "type": "string",
                    "format": "term",
                    "default": "http://purl.obolibrary.org/obo/PATO_0000461",
                    "ontology": "https://github.com/EBISPOT/efo/releases/download/v3.5.1/efo.owl",
                    "matchType": "exact"
                },
                "term_value": {
                    "description": "Exact value according to the EFO ontology",
                    "type": "string",
                    "default": "normal",
                    "autogenerated": true
                }
            },
            "required": [
                "term_url"
            ]
        }
    },
    "required": [
        "local_id",
        "biomaterial_type",
        "sample_type",
        "phenotype"
    ],
    "additionalProperties": true
}