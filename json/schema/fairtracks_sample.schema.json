{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_sample.schema.json",
    "$comment": "JSON signature: bd05376aca0339517a882180a0e6860d63150ee2522cab460d0c819fba2a12b6",
    "title": "FAIRification of Genomic Tracks JSON Schema - Sample",
    "type": "object",
    "properties": {
        "@schema": {
            "description": "The JSON schema absolute URL. Used for link JSON data to a particular version of the JSON schema. Must match the value of 'id' in the linked schema",
            "type": "string",
            "format": "uri",
            "pattern": "^(https?|ftp)://",
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_sample.schema.json"
        },
        "global_id": {
            "description": "Global sample identifier, resolvable by identifiers.org",
            "type": "string",
            "format": "curie",
            "namespace": "biosample",
            "matchType": "canonical",
            "examples": [
                "biosample:SAMN01731491"
            ]
        },
        "local_id": {
            "description": "Submitter-local identifier (within investigation/hub) for sample (in CURIE-format, if applicable)",
            "type": "string",
            "examples": [
                "geo:GSM945229"
            ],
            "unique": true
        },
        "biomaterial_type": {
            "description": "Type of biomaterial",
            "type": "string",
            "pattern": "^(?i)cell line|primary cell|primary cell culture|primary tissue$",
            "examples": [
                "primary cell"
            ]
        },
        "sample_type": {
            "description": "Main class of sample (specific cell line, cell type, etc.)",
            "type": "object",
            "properties": {
                "term_url": {
                    "description": "URL linking to an EFO ontology term",
                    "type": "string",
                    "format": "term",
                    "ontology": "https://github.com/EBISPOT/efo/releases/download/v3.5.1/efo.owl",
                    "matchType": "exact",
                    "examples": [
                        "http://purl.obolibrary.org/obo/CL_0000236"
                    ]
                },
                "term_value": {
                    "description": "Exact value according to the EFO ontology",
                    "type": "string",
                    "examples": [
                        "H1-hESC"
                    ],
                    "autogenerated": true
                }
            },
            "required": [
                "term_url"
            ]
        },
        "tissue_type": {
            "description": "Tissue type of sample",
            "type": "object",
            "properties": {
                "term_url": {
                    "description": "URL linking to an EFO ontology term",
                    "type": "string",
                    "format": "term",
                    "ontology": "https://github.com/EBISPOT/efo/releases/download/v3.5.1/efo.owl",
                    "matchType": "exact",
                    "examples": [
                        "http://purl.obolibrary.org/obo/CL_0002322"
                    ]
                },
                "term_value": {
                    "description": "Exact value according to the EFO ontology",
                    "type": "string",
                    "examples": [
                        "embryonic stem cell"
                    ],
                    "autogenerated": true
                }
            },
            "required": [
                "term_url"
            ]
        },
        "phenotype": {
            "description": "Main phenotype (e.g. disease) connected to the sample",
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_phenotype.schema.json"
        }
    },
    "required": [
        "local_id",
        "biomaterial_type",
        "sample_type",
        "phenotype"
    ],
    "additionalProperties": true
}