{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_study.schema.json",
    "title": "FAIRification of Genomic Tracks JSON Schema - Study",
    "type": "object",
    "properties": {
        "@schema": {
            "description": "The JSON schema absolute URI. Used for link JSON data to a particular version of the JSON schema. Must match the value of '$id' in the linked schema",
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_study.schema.json",
            "type": "string",
            "format": "iri"
        },
        "global_id": {
            "description": "Global study identifier, resolvable by identifiers.org",
            "type": "string",
            "format": "curie",
            "namespace": "?",
            "matchType": "canonical"
        },
        "local_id": {
            "description": "Submitter-local identifier (within investigation/hub) for study",
            "unique": true,
            "type": "string"
        },
        "study_name": {
            "description": "Name of the study",
            "type": "string"
        },
        "publications": {
            "type": "array",
            "items": {
                "description": "Pubmed identifiers (dataset or publication)",
                "type": "string",
                "format": "curie",
                "namespace": "pubmed",
                "matchType": "loose"
            }
        },
        "contact": {
            "description": "Contact information for study",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of contact person/organization",
                    "type": "string"
                },
                "e-mail": {
                    "description": "E-mail to contact person/organization",
                    "type": "string",
                    "format": "idn-email"
                },
                "orcid_id": {
                    "description": "ORCID id to contact person",
                    "type": "string",
                    "format": "curie",
                    "namespace": "orcid",
                    "matchType": "loose"
                }
            },
            "required": [
                "name"
            ],
            "anyOf": [
                {
                    "required": [
                        "e-mail"
                    ]
                },
                {
                    "required": [
                        "orcid_id"
                    ]
                }
            ]
        },
        "phenotype": {
            "description": "Main phenotype (e.g. disease) which is studied",
            "type": "object",
            "properties": {
                "term_iri": {
                    "description": "IRI linking to an ontology term",
                    "type": "string",
                    "format": "term",
                    "ontology": "?",
                    "matchType": "exact"
                },
                "term_value": {
                    "description": "Exact value according to the ontology used",
                    "autogenerated": true,
                    "type": "string"
                }
            },
            "required": [
                "term_iri"
            ]
        }
    },
    "required": [
        "global_id",
        "local_id",
        "study_name",
        "contact",
        "phenotype"
    ],
    "additionalProperties": true
}