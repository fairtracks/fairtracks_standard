{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/v1/current/json/schema/fairtracks_study.schema.json",
    "$comment": "JSON signature: 0bbfc7cf69d3ef6e2aeb128d889eb4d23216c309f8529aaac08152be5fa4df66",
    "title": "Study",
    "type": "object",
    "properties": {
        "@schema": {
            "description": "The JSON Schema absolute URL. Used to link JSON data to a JSON schema. Must match the value of '$id' in the linked schema",
            "type": "string",
            "format": "uri",
            "pattern": "^(https?|ftp)://",
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/v1/current/json/schema/fairtracks_study.schema.json"
        },
        "global_id": {
            "description": "Global study identifier, resolvable by identifiers.org",
            "type": "string",
            "format": "curie",
            "namespace": [
                "geo",
                "ega.study"
            ],
            "matchType": "canonical",
            "examples": [
                "geo:GSE35583"
            ]
        },
        "local_id": {
            "description": "Submitter-local identifier (within the track collection) for the study",
            "type": "string",
            "examples": [
                "UW_ChipSeq"
            ],
            "unique": true
        },
        "collection_ref": {
            "description": "Reference to the track collection containg the study (using the submitter-local identifier of the collection)",
            "type": "string",
            "format": "foreign_ref",
            "examples": [
                "encode_example"
            ],
            "foreignProperty": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/v1/current/json/schema/fairtracks.schema.json#collection_info/local_id"
        },
        "study_name": {
            "description": "Name of the study",
            "type": "string",
            "examples": [
                "Histone Modifications by ChIP-seq from ENCODE/University of Washington"
            ]
        },
        "publication": {
            "description": "Pubmed identifier (dataset or publication)",
            "type": "string",
            "format": "curie",
            "namespace": "pubmed",
            "matchType": "canonical",
            "examples": [
                "pubmed:22955617"
            ]
        },
        "contact": {
            "description": "Contact information for study",
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/v1/current/json/schema/fairtracks_contact.schema.json"
        }
    },
    "required": [
        "local_id",
        "collection_ref",
        "study_name",
        "contact"
    ],
    "additionalProperties": true
}
