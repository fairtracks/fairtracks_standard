{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_study.schema.json",
    "$comment": "JSON signature: fa9ff1da3b8bed9f1d5b34cfa516e26b15d331740be94c5947a6b7e9889c829c",
    "title": "FAIRification of Genomic Tracks JSON Schema - Study",
    "type": "object",
    "properties": {
        "@schema": {
            "description": "The JSON schema absolute URL. Used for link JSON data to a particular version of the JSON schema. Must match the value of '$id' in the linked schema",
            "type": "string",
            "format": "uri",
            "pattern": "^(https?|ftp)://",
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_study.schema.json"
        },
        "global_id": {
            "description": "Global study identifier, resolvable by identifiers.org",
            "type": "string",
            "format": "curie",
            "namespace": [
                "geo",
                "ega.study"
            ],
            "matchType": "canonical",
            "examples": [
                "GEO:GSE35583"
            ]
        },
        "local_id": {
            "description": "Submitter-local identifier (within investigation/hub) for study",
            "type": "string",
            "examples": [
                "UW_ChipSeq"
            ],
            "unique": true
        },
        "study_name": {
            "description": "Name of the study",
            "type": "string",
            "examples": [
                "Histone Modifications by ChIP-seq from ENCODE/University of Washington"
            ]
        },
        "publication": {
            "description": "Pubmed identifier (dataset or publication)",
            "type": "string",
            "format": "curie",
            "namespace": "pubmed",
            "matchType": "loose",
            "examples": [
                "22955617"
            ]
        },
        "contact": {
            "description": "Contact information for study",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of contact person/organization",
                    "type": "string",
                    "examples": [
                        "ENCODE DCC"
                    ]
                },
                "e-mail": {
                    "description": "E-mail to contact person/organization",
                    "type": "string",
                    "format": "idn-email",
                    "examples": [
                        "encode-help@lists.stanford.edu"
                    ]
                },
                "orcid": {
                    "description": "ORCID to contact person",
                    "type": "string",
                    "format": "curie",
                    "namespace": "orcid",
                    "matchType": "loose"
                }
            },
            "required": [
                "name"
            ],
            "anyOf": [
                {
                    "required": [
                        "e-mail"
                    ]
                },
                {
                    "required": [
                        "orcid"
                    ]
                }
            ]
        }
    },
    "required": [
        "local_id",
        "study_name",
        "contact"
    ],
    "additionalProperties": true
}